@model webapp.Model.Category
@{
    ViewData["Title"] = "Delete";
}
<form method="post"
      style="
      display:block;
      width:50%;
      margin:0 auto;">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">Edit category</h2>
            <hr />
        </div>
        <input type="hidden" asp-for="Id" />
        <div class="row mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="DisplayOrder">Display Order</label>
            <input disabled asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button class="btn btn-danger" type="submit"> Delete </button>
    </div>
    <a asp-action="Index" asp-controller="Category"> Back To Action </a>
</form>
@section scripts {
    @{
        <partial.names ="_ValidationScriptsPartial" />
    }
}


